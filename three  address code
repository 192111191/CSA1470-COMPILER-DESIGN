#include<stdio.h>
#include<string.h>
int i,j,l,addr=100;
char ex[10], exp[10] ,exp1[10],exp2[10],id1[5],op[5],id2[5];
int main()
{
printf("\nEnter the expression with arithmetic operator:");
scanf("%s",ex);
strcpy(exp,ex);
l=strlen(exp);
exp1[0]='\0';
for(i=0;i<l;i++)
{
if(exp[i]=='+'||exp[i]=='-')
{
	printf("\n%s :",exp);
if(exp[i+2]=='/'||exp[i+2]=='*')
{ printf("\n%s: ",exp1,exp2,id1,op,id2);
break;
}
else if(exp[i]=='/'||exp[i]=='*')
{
	break;
}
}}}
